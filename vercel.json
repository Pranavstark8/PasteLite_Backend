{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.js"
        }
    ],
    "env": {
        "MONGODB_URI": "@mongodb_uri",
        "BASE_URL": "@base_url",
        "TEST_MODE": "@test_mode",
        "NODE_ENV": "production"
    }
}